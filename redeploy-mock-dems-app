ns_set="cef5dd"

if [ "$1" = "dev" ]; then
    env="dev"
elif [ "$1" = "test" ]; then
    env="test"
elif [ "$1" = "prod" ]; then
    env="prod"
else
    env=""
fi

if [ "$env" = "" ]; then
   echo "Error.  Invalid environment specified: $1\n"
   return 1
else
   ns="$ns_set-$env"
fi

logging_level="INFO"

if [ "$env" = "prod" ]; then
    echo "WARNING:  You are about to deploy to PRODUCTION.  Are you sure? (y/n)"
    read answer
    if [ "$answer" != "y" ]; then
        echo "Aborting deployment."
        return 1
    else
        echo "PRODUCTION deployment not supported at this time."
        return 1
    fi
else
    logging_level="DEBUG"
    #logging_level="INFO"
fi

echo "`basename $0` to $ns ..."

pushd src/main/java/mock

kamel -n $ns delete mock-dems-app
kamel -n $ns run \
  MockDemsApp.java \
  --property file:MockDemsApp.properties \
  --profile openshift \
  --trait logging.level=$logging_level \
  --trait environment.vars=TZ="Canada/Pacific" \
  --trait service.node-port=false

popd
