ns_set="cef5dd"

if [ "$1" = "dev" ]; then
    env="dev"
elif [ "$1" = "test" ]; then
    env="test"
elif [ "$1" = "prod" ]; then
    env="prod"
else
    env=""
fi

if [ "$env" = "" ]; then
   echo "Error.  Invalid environment specified: $1\n"
   return 1
else
   ns="$ns_set-$env"
fi

echo "`basename $0` to $ns ..."

export TITLEPREFIX="Notification Service $ns "
echo -ne "\e]0;Notification Service $ns\a"

kubectl -n $ns logs -f deployment/ccm-notification-service --all-containers=true
