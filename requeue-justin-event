ns_set="cef5dd"

if [ "$1" = "dev" ]; then
    env="dev"
elif [ "$1" = "test" ]; then
    env="test"
elif [ "$1" = "prod" ]; then
    env="prod"
else
    env=""
fi

id="$2"

idEnd="$3"

if [ "$env" = "" ]; then
   echo "Error.  Invalid environment specified: '$1'"
   echo "$0 env justin_event_id"
   echo "$0 env justin_event_id_range_start justin_event_id_range_end"
   echo "E.g., $0 dev 100"
   echo "      $0 dev 100 105\n"
   return 1
else
   ns="$ns_set-$env"
fi

if [ "$env" = "prod" ]; then
    echo "WARNING:  You are about to deploy to PRODUCTION.  Are you sure? (y/n)"
    read answer
    if [ "$answer" != "y" ]; then
        echo "Aborting deployment."
        return 1
    fi

    return 1
fi

if [ "$id" = "" ]; then
   echo "Error.  Event id or range not specified.\n"
   echo "$0 env justin_event_id"
   echo "$0 env justin_event_id_range_start justin_event_id_range_end"
   echo "E.g., $0 dev 100"
   echo "      $0 dev 100 105\n"
   return 1
fi

echo "`basename $0` to $ns ..."

if [ "$idEnd" = "" ]; then
    oc -n $ns exec service/ccm-justin-adapter -- curl \
    -X PUT \
    "http://ccm-justin-adapter/requeueJustinEvent?id=$id"
else
    oc -n $ns exec service/ccm-justin-adapter -- curl \
    -X PUT \
    "http://ccm-justin-adapter/requeueJustinEventRange?id=$id&idEnd=$idEnd"
fi