ns_set="cef5dd"

id="$1"

if [ "$1" != "test" ] || [ "$1" = "dev" ]; then
    env="dev"
    if [ "$1" = "dev"]; then
        id="$1"
    fi
elif [ "$1" = "test" ]; then
    env="test"
    id="$2"
else
    env=""
fi

if [ "$env" = "" ]; then
   echo "Error.  Invalid environment specified: $1\n"
   return 1
else
   ns="$ns_set-$env"
fi

echo "`basename $0` to $ns ..."

oc -n $ns exec service/ccm-justin-adapter -- curl \
-X PUT \
"http://ccm-justin-adapter/requeueJustinEvent?id=$id"
